my_list = [8, 10, 6, 2, 4]  # List to sort
for i in range(len(my_list) - 1):  # Number of comparisons required is length-1
    for j in range(len(my_list) - 1 - i):  # Reduce the number of comparisons for each pass
        if my_list[j] > my_list[j + 1]:  # Compare adjacent elements
            my_list[j], my_list[j + 1] = my_list[j + 1], my_list[j]  # Swap elements if needed

