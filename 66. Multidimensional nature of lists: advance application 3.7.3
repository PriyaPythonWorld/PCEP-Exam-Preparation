temps = [[0.0 for h in range(24)] for d in range(31)]
highest = -100.0  # Starting from a low value to ensure correct comparison
for day in temps:
    for temp in day:
        if temp > highest:
            highest = temp  # Updating highest temperature if a higher value is found

print("The highest temperature was: ", highest)


